<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="67dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_UserItemComment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/profile" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/img_UserItemComment"
            android:background="@drawable/bg_comment">

            <TextView
                android:id="@+id/txt_CommentItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_NameCommentItem"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Comment"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_NameCommentItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/poppins_regular"
                android:padding="1dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/time_ItemComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Time"
            android:textColor="@color/black"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/like_Comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thích"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/time_ItemComment"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/like_ReplyComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phản hồi"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/like_Comment"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/img_LikeComment"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_click_heart"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/count_LikeComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="0"
            android:layout_margin="2dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:layout_toLeftOf="@+id/img_LikeComment"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>